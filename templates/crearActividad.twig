{% extends 'app.twig' %}

{% block content %}
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="panel panel-default">
			<div  class="panel-heading">Resgistro de Actividad</div>
			<div class="panel-body">
				<form method="post" name="userForm" id="userForm" action="">
					<div class="form-group">
						<label for="User Name">Usuario</label>
						<input type="text" class="form-control" id="txtName" name="txtName" required>
					</div>
					<div class="form-group">
 						<label for="Fecha Aviso">Fecha Aviso</label>
 						<input type="text" class="form-control" id="txtFechaA" name="txtFechaA" required>
 					</div>

					<div class="form-group">
						<label for="Prorroga">Prorroga</label>
						<input type="text" class="form-control" id="txtProrroga" name="txtProrroga" required>
					</div>


					<div class="form-group">
						<label for="Password">contrase√±a</label>
						<input type="password" class="form-control" id="txtPwd" name="txtPwd" required>
					</div>
					<span class={{ code }}>
						{{ errors }}
					</span><br>
						<button type="submit" id="login" class="btn btn-default">Crear</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
{% endblock %}
